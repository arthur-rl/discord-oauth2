{
    "compilerOptions": {
      "target": "esnext",                                  
      "declaration": true,
      "declarationDir": "./typings",
      "module": "commonjs",
  
      "outDir": "lib",
      
      "esModuleInterop": true,                           
      "forceConsistentCasingInFileNames": true,            
  
      "strict": true,                                      
      "skipLibCheck": true                             
    },
    "include": [
      "src/"
    ],
    "exclude": [
      "node_modules"
    ]
  }